extends ../layout

block title
    = `Beverage Application - Sign Up`

block content
    h1.title Beverage Sign Up
        form(action="/beverages/users",method="POST")
            .field
                .control
                    input.input(name="username")
            .field
                .control
                    input.input(name="password")
            .field
                .control
                    button.button.is-link.is-fullwith sign up